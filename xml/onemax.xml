<ea xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation='ea-alpha.xsd'
    version='0.2'>

  <initial>
    <section name='indi'> 
      <param name='type' value='BinaryIndi' /> 
      <param name='length' value='64' />
    </section>
    <section name='pop'> 
      <param name='size'  value='100' />
      <op name='EasyAlgorithm' type='unary'>
        <param name='selrate' value='0.4' />
        <param name='maxgen' value='100' />
        <code type='eval' language='perl'>
    	  <src><![CDATA[ 
    	  my $total = 0;
    	  for ( my $i = 0; $i < length( $indi->{_bitstr} ); $i ++ ) {
	  		$total += substr( $indi->{_bitstr}, $i, 1 );
		  }
		  return $total;
    	  ]]>
          </src>
        </code>
        <op name='MutationOne' type='unary' rate='1.0'>
        	<param name='probability' value='0.1' />
      	</op>
      	<op name='Crossover' type='binary' rate='1'>
        	<param name='numpoints' value='2' />
      	</op>
      </op>
    </section>
  </initial>


  <runtime>
  </runtime> 

</ea>